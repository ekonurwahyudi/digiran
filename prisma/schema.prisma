generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  avatar    String?  @default("/avatar.png")
  createdAt DateTime @default(now())
}

model GlAccount {
  id          String   @id @default(cuid())
  code        String   @unique
  description String
  keterangan  String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  budgets     Budget[]
  transactions Transaction[]
  monthlyAllocations MonthlyAllocation[]
  imprestItems ImprestItem[]
}

model Regional {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vendor {
  id        String   @id @default(cuid())
  name      String
  alamat    String?
  pic       String?
  phone     String?
  email     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  transactions Transaction[]
}

model Budget {
  id              String   @id @default(cuid())
  glAccountId     String
  glAccount       GlAccount @relation(fields: [glAccountId], references: [id])
  year            Int
  rkap            Float    @default(0)  // Nilai RKAP
  releasePercent  Float    @default(100) // Release Budget %
  totalAmount     Float    // Anggaran Release (rkap * releasePercent / 100)
  q1Amount        Float    @default(0)
  q2Amount        Float    @default(0)
  q3Amount        Float    @default(0)
  q4Amount        Float    @default(0)
  // Monthly amounts
  janAmount       Float    @default(0)
  febAmount       Float    @default(0)
  marAmount       Float    @default(0)
  aprAmount       Float    @default(0)
  mayAmount       Float    @default(0)
  junAmount       Float    @default(0)
  julAmount       Float    @default(0)
  augAmount       Float    @default(0)
  sepAmount       Float    @default(0)
  octAmount       Float    @default(0)
  novAmount       Float    @default(0)
  decAmount       Float    @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  allocations     RegionalAllocation[]

  @@unique([glAccountId, year])
}

model RegionalAllocation {
  id           String   @id @default(cuid())
  budgetId     String
  budget       Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  regionalCode String
  quarter      Int
  amount       Float
  percentage   Float    @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([budgetId, regionalCode, quarter])
}

model Transaction {
  id              String    @id @default(cuid())
  glAccountId     String
  glAccount       GlAccount @relation(fields: [glAccountId], references: [id])
  quarter         Int
  regionalCode    String
  kegiatan        String
  regionalPengguna String
  year            Int
  
  // Kwitansi & Pajak
  tanggalKwitansi   DateTime?
  nilaiKwitansi     Float     @default(0)
  jenisPajak        String?   // PPN11, PPNJasa2, PPNInklaring1.1, TanpaPPN
  nilaiTanpaPPN     Float     @default(0)
  nilaiPPN          Float     @default(0)
  keterangan        String?
  
  // Pengadaan
  jenisPengadaan    String?   // PadiUMKM, InpresFund, Nopes, Lainnya
  vendorId          String?
  vendor            Vendor?   @relation(fields: [vendorId], references: [id])
  
  // Dokumen & Finance
  tanggalEntry      DateTime  @default(now())
  noTiketMydx       String?
  tglSerahFinance   DateTime?
  picFinance        String?
  noHpFinance       String?
  tglTransferVendor DateTime?
  nilaiTransfer     Float?
  
  // Task Checklist
  taskPengajuan       Boolean @default(true)
  taskTransferVendor  Boolean @default(false)
  taskTerimaBerkas    Boolean @default(false)
  taskUploadMydx      Boolean @default(false)
  taskSerahFinance    Boolean @default(false)
  taskVendorDibayar   Boolean @default(false)
  
  // Status: Open, Proses, Close
  status            String    @default("Open")
  
  // Imprest Fund relationship
  imprestFundId     String?
  imprestFund       ImprestFund? @relation(fields: [imprestFundId], references: [id])
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // File attachments
  files             TransactionFile[]
}

model PicAnggaran {
  id                    String   @id @default(cuid())
  unit                  String
  namaPemegangImprest   String
  nikPemegangImprest    String
  namaPenanggungJawab   String
  nikPenanggungJawab    String
  year                  Int
  isActive              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([unit, year])
}

model MonthlyAllocation {
  id          String    @id @default(cuid())
  glAccountId String
  glAccount   GlAccount @relation(fields: [glAccountId], references: [id])
  year        Int
  janAmount   Float     @default(0)
  febAmount   Float     @default(0)
  marAmount   Float     @default(0)
  aprAmount   Float     @default(0)
  mayAmount   Float     @default(0)
  junAmount   Float     @default(0)
  julAmount   Float     @default(0)
  augAmount   Float     @default(0)
  sepAmount   Float     @default(0)
  octAmount   Float     @default(0)
  novAmount   Float     @default(0)
  decAmount   Float     @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([glAccountId, year])
}

model TransactionFile {
  id            String      @id @default(cuid())
  transactionId String
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  fileName      String
  originalName  String
  fileSize      Int
  mimeType      String
  filePath      String
  uploadedAt    DateTime    @default(now())
}

model ImprestFund {
  id                  String        @id @default(cuid())
  kelompokKegiatan    String
  regionalCode        String?       // Regional code for budget allocation
  status              String        @default("draft") // draft, open, proses, close
  totalAmount         Float         @default(0)
  debit               Float         @default(0)      // Top up amount
  
  // Simplified fields - only keep what's needed
  keterangan            String?
  imprestFundCardId     String?       // Link to ImprestFundCard for top up
  imprestFundCard       ImprestFundCard? @relation(fields: [imprestFundCardId], references: [id])
  
  // Finance fields
  noTiketMydx       String?
  tglSerahFinance   DateTime?
  picFinance        String?
  noHpFinance       String?
  tglTransferVendor DateTime?
  nilaiTransfer     Float?
  
  // Task Checklist
  taskPengajuan       Boolean @default(true)
  taskTransferVendor  Boolean @default(false)
  taskTerimaBerkas    Boolean @default(false)
  taskUploadMydx      Boolean @default(false)
  taskSerahFinance    Boolean @default(false)
  taskVendorDibayar   Boolean @default(false)
  
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  items            ImprestItem[]
  transactions     Transaction[] // Related transactions created from this imprest fund
  
  @@index([status])
  @@index([imprestFundCardId])
  @@index([createdAt(sort: Desc)])
}

model ImprestItem {
  id            String      @id @default(cuid())
  imprestFundId String
  imprestFund   ImprestFund @relation(fields: [imprestFundId], references: [id], onDelete: Cascade)
  tanggal       DateTime
  uraian        String
  glAccountId   String
  glAccount     GlAccount   @relation(fields: [glAccountId], references: [id])
  jumlah        Float
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model ImprestFundCard {
  id            String        @id @default(cuid())
  nomorKartu    String        @unique
  user          String
  saldo         Float         @default(0)
  pic           String
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  imprestFunds  ImprestFund[] // Top up records
}
