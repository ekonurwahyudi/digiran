generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  avatar    String?  @default("/avatar.png")
  createdAt DateTime @default(now())
}

model GlAccount {
  id          String   @id @default(cuid())
  code        String   @unique
  description String
  keterangan  String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  budgets     Budget[]
  transactions Transaction[]
}

model Regional {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vendor {
  id        String   @id @default(cuid())
  name      String
  alamat    String?
  pic       String?
  phone     String?
  email     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  transactions Transaction[]
}

model Budget {
  id              String   @id @default(cuid())
  glAccountId     String
  glAccount       GlAccount @relation(fields: [glAccountId], references: [id])
  year            Int
  rkap            Float    @default(0)  // Nilai RKAP
  releasePercent  Float    @default(100) // Release Budget %
  totalAmount     Float    // Anggaran Release (rkap * releasePercent / 100)
  q1Amount        Float    @default(0)
  q2Amount        Float    @default(0)
  q3Amount        Float    @default(0)
  q4Amount        Float    @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  allocations     RegionalAllocation[]

  @@unique([glAccountId, year])
}

model RegionalAllocation {
  id           String   @id @default(cuid())
  budgetId     String
  budget       Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  regionalCode String
  quarter      Int
  amount       Float
  percentage   Float    @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([budgetId, regionalCode, quarter])
}

model Transaction {
  id              String    @id @default(cuid())
  glAccountId     String
  glAccount       GlAccount @relation(fields: [glAccountId], references: [id])
  quarter         Int
  regionalCode    String
  kegiatan        String
  regionalPengguna String
  year            Int
  
  // Kwitansi & Pajak
  tanggalKwitansi   DateTime?
  nilaiKwitansi     Float     @default(0)
  jenisPajak        String?   // PPN11, PPNJasa2, PPNInklaring1.1, TanpaPPN
  nilaiTanpaPPN     Float     @default(0)
  nilaiPPN          Float     @default(0)
  keterangan        String?
  
  // Pengadaan
  jenisPengadaan    String?   // PadiUMKM, InpresFund, Nopes, Lainnya
  vendorId          String?
  vendor            Vendor?   @relation(fields: [vendorId], references: [id])
  
  // Dokumen & Finance
  tanggalEntry      DateTime  @default(now())
  noTiketMydx       String?
  tglSerahFinance   DateTime?
  picFinance        String?
  noHpFinance       String?
  tglTransferVendor DateTime?
  nilaiTransfer     Float?
  
  // Task Checklist
  taskPengajuan       Boolean @default(true)
  taskTransferVendor  Boolean @default(false)
  taskTerimaBerkas    Boolean @default(false)
  taskUploadMydx      Boolean @default(false)
  taskSerahFinance    Boolean @default(false)
  taskVendorDibayar   Boolean @default(false)
  
  // Status: Open, Proses, Close
  status            String    @default("Open")
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model PicAnggaran {
  id                    String   @id @default(cuid())
  unit                  String
  namaPemegangImprest   String
  nikPemegangImprest    String
  namaPenanggungJawab   String
  nikPenanggungJawab    String
  year                  Int
  isActive              Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([unit, year])
}
